{
    "manifest_version": 2,
    "name": "easy-reading-plugin",
    "description": "A chrome plugin for reading easily.",
    "version": "1.0",

    "icons": {
        "128": "icons/128.png",
        "64": "icons/64.png",
        "32": "icons/32.png",
        "16": "icons/16.png"
    },

    "browser_action": {
        "default_icon": "icons/reading-icon.png",
        "default_popup": "popup.html",
        "default_title": "Easy Reading"
    },

    "permissions": [
        "tabs",
        "contextMenus",
        "http://*/*", "https://*/*"
    ]
}
