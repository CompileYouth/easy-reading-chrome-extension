{
    "manifest_version": 2,
    "name": "easy-reading-plugin",
    "description": "A Chrome extension for reading easily.",
    "version": "1.0",

    "icons": {
        "128": "icons/128.png",
        "64": "icons/64.png",
        "32": "icons/32.png",
        "16": "icons/16.png"
    },

    "content_scripts": [
        {
            "matches": [ "http://www.theguardian.com/*", "https://www.theguardian.com/*" ],
            "js": [ "scripts/src/lib/jquery-3.1.1.min.js", "scripts/src/chrome/content.js" ],
            "css": [ "style/style.css" ],
            "run_at": "document_start"
        }
    ],

    "permissions": [
        "tabs",
        "contextMenus",
        "http://*.theguardian.com/",
        "https://*.theguardian.com/",
        "http://*/",
        "https://*/",
        "tts"
    ],

    "content_security_policy": "default-src 'self'; media-src *.shanbay.com"
}
